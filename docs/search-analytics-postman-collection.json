{
  "info": {
    "name": "Search Analytics Service",
    "_postman_id": "2bd26422-2ab2-408d-989b-ac570e1e95c9",
    "description": "Postman collection for testing the Search Analytics microservice (health + statistics endpoints).",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "day",
      "value": "2025-12-06",
      "type": "string"
    },
    {
      "key": "rangeFrom",
      "value": "2025-12-06",
      "type": "string"
    },
    {
      "key": "rangeTo",
      "value": "2025-12-06",
      "type": "string"
    },
    {
      "key": "limit",
      "value": "10",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health",
      "item": [
        {
          "name": "Health Root",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/health",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "health"
              ]
            }
          }
        },
        {
          "name": "Health Live",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/health/live",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "health",
                "live"
              ]
            }
          }
        },
        {
          "name": "Health Ready",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/health/ready",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "health",
                "ready"
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Stats",
      "item": [
        {
          "name": "Get Daily Stats",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/stats/daily?day={{day}}&limit={{limit}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "stats",
                "daily"
              ],
              "query": [
                {
                  "key": "day",
                  "value": "{{day}}"
                },
                {
                  "key": "limit",
                  "value": "{{limit}}"
                }
              ]
            }
          }
        },
        {
          "name": "Get Range Stats",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/stats/range?from={{rangeFrom}}&to={{rangeTo}}&limit={{limit}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "stats",
                "range"
              ],
              "query": [
                {
                  "key": "from",
                  "value": "{{rangeFrom}}"
                },
                {
                  "key": "to",
                  "value": "{{rangeTo}}"
                },
                {
                  "key": "limit",
                  "value": "{{limit}}"
                }
              ]
            }
          }
        }
      ]
    }
  ]
}